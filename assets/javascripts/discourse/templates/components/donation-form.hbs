{{#if confirmation}}
  <div class="discourse-donations-confirmation">
    This is the confirmation

    <table>
      <tr>
        <td>Amount</td>
        <td>{{amount}}</td>
      </tr>
      <tr>
        <td>Card</td>
        <td>{{last4}}</td>
      </tr>
    </table>

    {{#d-button action="confirmStripeCard" class="btn btn-primary btn-payment"}}
      {{i18n 'discourse_donations.submit'}} {{amount}}
    {{/d-button}}
  </div>
{{else}}
  <form id="payment-form" class="form-horizontal details">
    <div class="user-controls">
      <div class="display-row">
        <div class="field">Payment Amount</div>
        <div class="value">
          {{input value=amount}}<br>
          Enter {{currency}}
        </div>
      </div>
    </div>

    <div class="user-controls">
      <div class="display-row">
        <div class="field"></div>
        <div class="value">
          {{stripe-card
            amount=amount
            currency=currency
            handleConfirmStripeCard=(action "handleConfirmStripeCard")
          }}
        </div>
      </div>
    </div>
  </form>
{{/if}}
